{
  "author": {
    "name": "Bi-Programmer"
  },
  "name": "crm-v1.1",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && npm run copy:sql && npm run copy:session && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc -p src/electron/tsconfig.json",
    "dist:win": "npm run transpile:electron && npm run build && npm run copy:sql && npm run copy:session && electron-builder --win --x64",
    "copy:sql": "cp-cli \"src/electron/sql\" dist-electron/sql --recursive --glob \"**/*\"",
    "copy:session": "cp-cli \"src/electron/session\" dist-electron/session --recursive --glob \"**/*\""
  },
  "dependencies": {
    "firebase": "^12.1.0",
    "firebase-admin": "^13.4.0",
    "lucide-react": "^0.540.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.55.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "cp-cli": "^2.0.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
